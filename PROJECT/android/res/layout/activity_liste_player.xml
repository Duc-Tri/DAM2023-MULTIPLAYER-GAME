<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bckgrnd_online"
    tools:context=".ListPlayerActivity">

    <LinearLayout
        android:id="@+id/llRecyclerView"
        android:layout_width="676dp"
        android:layout_height="226dp"
        android:layout_margin="25dp"
        android:background="@drawable/card_border"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvListPlayer"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <include
            layout="@layout/item_list_player_minimized"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="689dp"
        android:layout_height="73dp"
        android:layout_marginTop="18dp"
        android:orientation="horizontal"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llRecyclerView">

        <Button
            android:id="@+id/btnRetourLobby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_change"
            android:text="@string/retour"
            android:textColor="@color/font_change" />

        <Button
            android:id="@+id/btnLancezGame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_change"
            android:text="@string/debut_game"
            android:textColor="@color/font_change" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>